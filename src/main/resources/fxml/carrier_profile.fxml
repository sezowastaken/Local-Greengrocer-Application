<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.group25.greengrocer.controller.CarrierProfileController"
            stylesheets="@../styles/carrier.css">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="My Profile" textFill="white">
                <font>
                    <Font name="System Bold" size="20"/>
                </font>
            </Label>
        </HBox>
    </top>

    <!-- Profile Form -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="120" prefWidth="120"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="300" prefWidth="400"/>
                </columnConstraints>

                <!-- Username (Read-only) -->
                <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0">
                    <font><Font size="14"/></font>
                </Label>
                <Label fx:id="usernameLabel" text="" GridPane.rowIndex="0" GridPane.columnIndex="1"
                       style="-fx-text-fill: #7f8c8d;">
                    <font><Font size="14"/></font>
                </Label>

                <!-- Role (Read-only) -->
                <Label text="Role:" GridPane.rowIndex="1" GridPane.columnIndex="0">
                    <font><Font size="14"/></font>
                </Label>
                <Label fx:id="roleLabel" text="" GridPane.rowIndex="1" GridPane.columnIndex="1"
                       style="-fx-text-fill: #7f8c8d;">
                    <font><Font size="14"/></font>
                </Label>

                <!-- Full Name -->
                <Label text="Full Name:*" GridPane.rowIndex="2" GridPane.columnIndex="0">
                    <font><Font size="14"/></font>
                </Label>
                <TextField fx:id="fullNameField" promptText="Enter your full name"
                          GridPane.rowIndex="2" GridPane.columnIndex="1">
                    <font><Font size="14"/></font>
                </TextField>

                <!-- Phone -->
                <Label text="Phone:" GridPane.rowIndex="3" GridPane.columnIndex="0">
                    <font><Font size="14"/></font>
                </Label>
                <TextField fx:id="phoneField" promptText="Enter phone number"
                          GridPane.rowIndex="3" GridPane.columnIndex="1">
                    <font><Font size="14"/></font>
                </TextField>

                <!-- Address Line -->
                <Label text="Address:" GridPane.rowIndex="4" GridPane.columnIndex="0">
                    <font><Font size="14"/></font>
                </Label>
                <TextField fx:id="addressField" promptText="Enter address"
                          GridPane.rowIndex="4" GridPane.columnIndex="1">
                    <font><Font size="14"/></font>
                </TextField>

                <!-- City -->
                <Label text="City:" GridPane.rowIndex="5" GridPane.columnIndex="0">
                    <font><Font size="14"/></font>
                </Label>
                <TextField fx:id="cityField" promptText="Enter city"
                          GridPane.rowIndex="5" GridPane.columnIndex="1">
                    <font><Font size="14"/></font>
                </TextField>
            </GridPane>

            <!-- Required field note -->
            <Label text="* Required field" style="-fx-text-fill: #95a5a6; -fx-font-size: 12;">
                <VBox.margin>
                    <Insets top="10"/>
                </VBox.margin>
            </Label>

            <!-- Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="updateButton" text="Update Profile" onAction="#handleUpdateProfile"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 30;">
                    <font><Font size="14"/></font>
                </Button>
                <Button fx:id="backButton" text="Back" onAction="#handleBack"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 30;">
                    <font><Font size="14"/></font>
                </Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>
