<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.group25.greengrocer.controller.RegisterController"
           stylesheets="@../css/customer.css">
    
    <VBox alignment="CENTER" maxWidth="400" maxHeight="450" styleClass="login-container">
        <Text text="Register New Account" styleClass="login-title"/>
        
        <Label text="Join Group25 Greengrocer" style="-fx-text-fill: #666;"/>
        
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Username"/>
            <TextField fx:id="usernameField" promptText="Choose a username"/>
        </VBox>
        
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Password"/>
            <PasswordField fx:id="passwordField" promptText="Choose a password"/>
        </VBox>
        
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Confirm Password"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Retype password"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Role"/>
            <ComboBox fx:id="roleComboBox" maxWidth="Infinity" promptText="Select Role" />
        </VBox>

        <VBox fx:id="licenseUploadSection" spacing="10" managed="false" visible="false" style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-background-radius: 5;">
             <Label text="Driver License Photos (Required)" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
             <HBox spacing="10" alignment="CENTER">
                 <VBox spacing="5" alignment="CENTER">
                     <Button text="Front Side" onAction="#handleUploadFront" styleClass="button-secondary" style="-fx-font-size: 11px;"/>
                     <Label fx:id="lblFrontStatus" text="Pending" style="-fx-font-size: 10px;"/>
                     <ImageView fx:id="imgLicenseFrontPreview" fitWidth="80" fitHeight="50" preserveRatio="true"/>
                 </VBox>
                 <VBox spacing="5" alignment="CENTER">
                     <Button text="Back Side" onAction="#handleUploadBack" styleClass="button-secondary" style="-fx-font-size: 11px;"/>
                     <Label fx:id="lblBackStatus" text="Pending" style="-fx-font-size: 10px;"/>
                     <ImageView fx:id="imgLicenseBackPreview" fitWidth="80" fitHeight="50" preserveRatio="true"/>
                 </VBox>
             </HBox>
        </VBox>
        
        <Button text="Register" onAction="#handleRegister" maxWidth="Infinity" styleClass="button-primary" defaultButton="true"/>
        
        <Label fx:id="messageLabel" styleClass="error-label"/>
        
        <Hyperlink text="Already have an account? Login" onAction="#handleGoToLogin" style="-fx-text-fill: #4CAF50;"/>
        
        <Separator style="-fx-padding: 10 0;"/>
        

    </VBox>
    
</StackPane>
