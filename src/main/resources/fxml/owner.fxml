                <Label text="Dashboard Overview" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
                
                <!-- Statistics Cards -->
                <HBox spacing="20" alignment="CENTER">
                    <!-- Total Users Card -->
                    <VBox spacing="10" styleClass="product-card" prefWidth="200" alignment="CENTER">
                        <Label fx:id="lblTotalUsers" text="0" styleClass="owner-stat-value" style="-fx-text-fill: #2A73FF;"/>
                        <Label text="Total Users" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
