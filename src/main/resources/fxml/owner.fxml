                        <Label fx:id="lblTotalOrders" text="0" styleClass="owner-stat-value" style="-fx-text-fill: #fa5f7e;"/>
                        <Label text="Total Orders" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
                    </VBox>
                    
                    <!-- Delivered Orders Card -->
                    <VBox spacing="10" styleClass="product-card" prefWidth="200" alignment="CENTER">
