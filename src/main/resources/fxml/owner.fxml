<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.group25.greengrocer.controller.OwnerController"
            stylesheets="@../css/app.css"
            prefHeight="600.0" prefWidth="900.0">

    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 15; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 0, 0, 5, 0);">
            <Label text="Owner Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: transparent; -fx-text-fill: #666; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" style="-fx-background-color: transparent;">
            <!-- Product Management Tab -->
            <Tab text="Products">
                <HBox spacing="20" style="-fx-padding: 20;">
                    <VBox spacing="15" prefWidth="320" styleClass="product-card">
                        <Label text="Product Management" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                        
                        <VBox spacing="5">
                            <Label text="Name"/>
                            <TextField fx:id="txtProdName" promptText="Enter product name" styleClass="text-field"/>
                        </VBox>
                        
                        <HBox spacing="10">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Price"/>
                                <TextField fx:id="txtProdPrice" promptText="0.00" styleClass="text-field"/>
                            </VBox>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Stock"/>
                                <TextField fx:id="txtProdStock" promptText="0" styleClass="text-field"/>
                            </VBox>
                        </HBox>

                        <VBox spacing="5">
                            <Label text="Threshold"/>
                            <TextField fx:id="txtProdThreshold" promptText="Low stock alert qty" styleClass="text-field"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Category"/>
                            <ComboBox fx:id="comboProdCategory" promptText="Select Category" prefWidth="Infinity" styleClass="combo-box"/>
                        </VBox>

                        <CheckBox fx:id="chkIsPiece" text="Sold by Piece (Unit)" style="-fx-padding: 5 0;"/>
                        
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Button text="Browse Image" onAction="#handleBrowseImage" styleClass="button-secondary"/>
                            <Label fx:id="lblImageStatus" text="No file selected" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
                        </HBox>
                        
                        <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                            <Button text="Add" onAction="#handleAddProduct" styleClass="button-primary" prefWidth="80"/>
                            <Button text="Update" onAction="#handleUpdateProduct" styleClass="button-secondary" prefWidth="80"/>
                            <Button text="Delete" onAction="#handleDeleteProduct" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3px; -fx-padding: 10 20; -fx-cursor: hand;" prefWidth="80"/>
                        </HBox>
                    </VBox>
                    
                    <VBox HBox.hgrow="ALWAYS" styleClass="product-card" style="-fx-padding: 0;">
                        <TableView fx:id="productTable" VBox.vgrow="ALWAYS" style="-fx-background-radius: 5; -fx-border-color: transparent;">
                            <columns>
                                <TableColumn fx:id="colProdName" text="Name" prefWidth="150"/>
                                <TableColumn fx:id="colProdPrice" text="Price" prefWidth="80"/>
                                <TableColumn fx:id="colProdStock" text="Stock" prefWidth="80"/>
                                <TableColumn fx:id="colProdThreshold" text="Threshold" prefWidth="80"/>
                                <TableColumn fx:id="colProdCategory" text="Category" prefWidth="120"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                </HBox>
            </Tab>

            <!-- Carrier Management Tab -->
            <Tab text="Carriers">
                <HBox spacing="20" style="-fx-padding: 20;">
                    <VBox spacing="15" prefWidth="300" styleClass="product-card">
                        <Label text="Hire New Carrier" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                        
                        <VBox spacing="5">
                            <Label text="Username"/>
                            <TextField fx:id="txtCarrUsername" promptText="Carrier username" styleClass="text-field"/>
                        </VBox>
                        <VBox spacing="5">
                            <Label text="Password"/>
                            <TextField fx:id="txtCarrPassword" promptText="Set password" styleClass="text-field"/>
                        </VBox>
                        
                        <Button text="Hire Carrier" onAction="#handleAddCarrier" styleClass="button-primary" prefWidth="Infinity"/>
                        <Separator style="-fx-padding: 10 0;"/>
                        <Button text="Fire Selected" onAction="#handleFireCarrier" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3px; -fx-padding: 10 20; -fx-cursor: hand;" prefWidth="Infinity"/>
                    </VBox>
                    
                    <VBox HBox.hgrow="ALWAYS" styleClass="product-card" style="-fx-padding: 0;">
                        <TableView fx:id="carrierTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colCarrUsername" text="Carrier Username"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                </HBox>
            </Tab>

            <!-- Orders Tab -->
            <Tab text="Orders">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <HBox alignment="CENTER_RIGHT">
                        <Button text="Refresh List" onAction="#handleRefresh" styleClass="button-secondary"/>
                    </HBox>
                    <TableView fx:id="orderTable" VBox.vgrow="ALWAYS" styleClass="product-card" style="-fx-padding: 0;">
                        <columns>
                            <TableColumn fx:id="colOrderId" text="Order ID" prefWidth="80"/>
                            <TableColumn fx:id="colOrderStatus" text="Status" prefWidth="120"/>
                            <TableColumn fx:id="colOrderTotal" text="Total Amount" prefWidth="120"/>
                            <TableColumn fx:id="colOrderDate" text="Date" prefWidth="180"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </Tab>

            <!-- Messages Tab -->
            <Tab text="Messages">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <TableView fx:id="messageTable" VBox.vgrow="ALWAYS" styleClass="product-card" style="-fx-padding: 0;">
                        <columns>
                            <TableColumn fx:id="colMsgSender" text="Customer" prefWidth="150"/>
                            <TableColumn fx:id="colMsgContent" text="Message" prefWidth="300"/>
                            <TableColumn fx:id="colMsgReply" text="Your Reply" prefWidth="300"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    
                    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="product-card">
                        <TextArea fx:id="txtReply" promptText="Select a message and type your reply..." prefHeight="60" HBox.hgrow="ALWAYS" wrapText="true" style="-fx-background-color: transparent; -fx-border-color: #ddd; -fx-border-radius: 3;"/>
                        <Button text="Send Reply" onAction="#handleReplyMessage" styleClass="button-primary" prefHeight="60" prefWidth="100"/>
                    </HBox>
                </VBox>
            </Tab>

            <!-- Reports Tab -->
            <Tab text="Reports">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <HBox alignment="CENTER_RIGHT">
                        <Button text="Refresh Data" onAction="#handleRefresh" styleClass="button-secondary"/>
                    </HBox>
                    <HBox spacing="20" VBox.vgrow="ALWAYS">
                        <VBox spacing="10" HBox.hgrow="ALWAYS" styleClass="product-card">
                            <Label text="Top Selling Products" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                            <BarChart fx:id="chartTopProducts" animated="false" legendVisible="false">
                                <xAxis><CategoryAxis label="Product"/></xAxis>
                                <yAxis><NumberAxis label="Quantity"/></yAxis>
                            </BarChart>
                        </VBox>
                        <VBox spacing="10" HBox.hgrow="ALWAYS" styleClass="product-card">
                            <Label text="Revenue Last 7 Days" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                            <BarChart fx:id="chartRevenue" animated="false" legendVisible="false">
                                <xAxis><CategoryAxis label="Date"/></xAxis>
                                <yAxis><NumberAxis label="Revenue ($)"/></yAxis>
                            </BarChart>
                        </VBox>
                    </HBox>
                </VBox>
            </Tab>

            <!-- Marketing Tab (Coupons & Loyalty) -->
            <Tab text="Marketing">
                <HBox spacing="20" style="-fx-padding: 20;">
                    <!-- Left: Loyalty & New Coupon -->
                    <VBox spacing="15" prefWidth="320">
                        <!-- Loyalty Section -->
                        <VBox spacing="10" styleClass="product-card">
                            <Label text="Loyalty Settings" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                            <Label text="Loyalty Discount Rate (0.00 - 1.00)"/>
                            <HBox spacing="10">
                                <TextField fx:id="txtLoyaltyRate" promptText="e.g. 0.05" styleClass="text-field" HBox.hgrow="ALWAYS"/>
                                <Button text="Save" onAction="#handleSaveLoyalty" styleClass="button-primary"/>
                            </HBox>
                        </VBox>

                        <!-- Add Coupon Section -->
                        <VBox spacing="10" styleClass="product-card">
                            <Label text="Create New Coupon" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                            
                            <TextField fx:id="txtCouponCode" promptText="Coupon Code (e.g. SUMMER10)" styleClass="text-field"/>
                            
                            <HBox spacing="10">
                                <ComboBox fx:id="comboDiscountType" promptText="Type" styleClass="combo-box" prefWidth="150"/>
                                <TextField fx:id="txtDiscountValue" promptText="Value" styleClass="text-field" HBox.hgrow="ALWAYS"/>
                            </HBox>
                            
                            <TextField fx:id="txtMinOrder" promptText="Min Order Amount" styleClass="text-field"/>
                            <DatePicker fx:id="dpValidUntil" promptText="Valid Until" maxWidth="Infinity"/>
                            
                            <Button text="Create Coupon" onAction="#handleAddCoupon" styleClass="button-primary" maxWidth="Infinity"/>
                        </VBox>
                    </VBox>

                    <!-- Right: Coupon List -->
                    <VBox HBox.hgrow="ALWAYS" styleClass="product-card" style="-fx-padding: 0;">
                        <TableView fx:id="couponTable" VBox.vgrow="ALWAYS" style="-fx-background-radius: 5; -fx-border-color: transparent;">
                            <columns>
                                <TableColumn fx:id="colCouponCode" text="Code" prefWidth="100"/>
                                <TableColumn fx:id="colCouponType" text="Type" prefWidth="80"/>
                                <TableColumn fx:id="colCouponValue" text="Value" prefWidth="80"/>
                                <TableColumn fx:id="colCouponMin" text="Min Order" prefWidth="80"/>
                                <TableColumn fx:id="colCouponValid" text="Expires" prefWidth="100"/>
                                <TableColumn fx:id="colCouponActive" text="Active" prefWidth="60"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                        <HBox spacing="10" style="-fx-padding: 10;" alignment="CENTER_RIGHT">
                            <Button text="Toggle Active" onAction="#handleToggleCoupon" styleClass="button-secondary"/>
                            <Button text="Delete" onAction="#handleDeleteCoupon" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 3; -fx-cursor: hand;"/>
                        </HBox>
                    </VBox>
                </HBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
